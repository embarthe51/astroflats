<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h4 class="mb-4 text-center">Edit my reservation</h4>
        <%= simple_form_for [@astroflat, @booking],
        html: {
          data: {
            controller: 'flatpickr'
          }
        } do |f| %>

        <%= f.input :arrival_date,
        as: :string,
        input_html: {
          data: {
            flatpickr_target: 'startDateInput',
          }
        } %>

        <%= f.input :departure_date,
        as: :string,
        input_html: {
          data: {
            flatpickr_target: 'endDateInput'
          }
        } %>
        <%= f.submit 'Edit my booking!', class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
