
        <%= simple_form_for(astroflat) do |form| %>
          <%= form.input :flat_name %>
          <%= form.input :address %>
          <%= form.input :content %>
          <%= form.input :number_of_guests %>
          <%= form.input :price_per_night, placeholder:"$"%>
          <%= form.input :surface_area, placeholder:"km" %>
          <%= form.submit class: 'btn btn-flat-violet'%>
        <% end %>
